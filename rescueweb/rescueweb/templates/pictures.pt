<head>

<link tal:condition="user" rel="stylesheet" href="${request.static_url('rescueweb:static/tinydropdown.css')}" type="text/css" />

</head>

<div metal:use-macro="main.macros['template']">  
    <div metal:fill-slot="content">
        <p><h3>Click an image to see the rest of the set</h3></p>
        <ul class="hoverbox">
			<div tal:repeat="pic pictures">
            <form method="post">
                <input type="submit" name="category.chosen" value="${pic[2]}"/>
			        <li><a href ="/category_pictures#${pic[2]}"><img src="${request.static_url('rescueweb:static{}'.format(pic[0]))}" alt="${pic[2]}" />
                        <input type="image" src="${request.static_url('rescueweb:static{}'.format(pic[0]))}" name="category.submitted" value="${pic[2]}" alt="Submit"   class="Preview">
                        </a><br><h4>${pic[2]}</h4></li>
                </form>			
            </div>
		</ul>
    </div>
</div>

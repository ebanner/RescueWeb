<div metal:use-macro="main.macros['template']">
    <div metal:fill-slot="content">
    
        <form method="post">

			Login: <input type="text" name="username" value="" required/><br/>
			Password: <input type="text" name="password" value="" required/><br/>
			First Name: <input type="text" name="firstname" value="" required/><br/>
			Middle Name: <input type="text" name="middlename" value=""/><br/>
			Last Name: <input type="text" name="lastname" value=""required/><br/>
			Birthday:
			<select name="month">
						<div tal:repeat = "month monthlist">
							 <option value=${month[1]}>${month[0]}</option>
		  				</div>
						</select>

						<select name="day">
						<div tal:repeat = "day range(30)">
							 <option value=${day+1}>${day+1}</option>
		  				</div>
						</select>

						<select name="year">
						<div tal:repeat = "year range(120)">
							 <option value=${year+1900}>${year+1900}</option>
		  				</div>
						</select> <br/>
						
			Street: <input type="text" name="street" value=""/><br/>
			City: <input type="text" name="city" value=""/><br/>
			State: <input type="text" name="state" value=""/><br/>
			Zipcode: <input type="text" name="zipcode" value=""/><br/>
			Residence: <input type="text" name="residence" value=""/><br/>
			Room Number: <input type="text" name="roomnumber" value=""/><br/>
			Phone Number: <input type="text" name="phonenumber" value="" /><br/>
			Email: <input type="text" name="email" value="" required/><br/>

			Privileges: <select name="privileges">
						  	<div tal:repeat = "priv privilegesOptions">
  						   		<option value=${priv}>${priv}</option>
  							</div>
						  </select><br/>
						  
			Training Level <select name="trainingvalue">
								<div tal:repeat = "train trainingOptions">
  						   			<option value=${train}>${train}</option>
  								</div>
						    </select><br/>
						    
			Administrative Level: <select name="administrativevalue">
								<div tal:repeat = "admin administrativeOptions">
  						   			<option value=${admin}>${admin}</option>
  								</div>
						    </select><br/>
						    
			Operational Level: <select name="operationalvalue">
								<div tal:repeat = "oper operationalOptions">
  						   			<option value=${oper}>${oper}</option>
  								</div>
						    </select><br/>	    
			
			
          <input type="submit" name="form.submitted" value="Add User"/>
        </form>
    </div>
</div>
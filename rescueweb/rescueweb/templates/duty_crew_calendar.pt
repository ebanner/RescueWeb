<div metal:use-macro="main.macros['template']">
    <div metal:fill-slot="content">
        <p>Welcome to the duty crew calendar page!</p>
        <p>Calendars are awful</p>
	
	<!--?
	<div import calendar>
	<div tal:define ="no_of_days calendar.monthrange(2013, 4)[1] ">
	<div tal:define ="start_day calendar.monthrange(2013, 4)[0] ">
	-->
	
	<div tal:define= "month monthName "> 
	<div tal:define= "no_of_days days" >
	<div tal:define= "start_day startDay">
	
		
	<table border=3 bordercolor=8C0303 cellspacing=3 cellpadding=3>
	<tr>
	     <th colspan="7" align=center tal:content= "month"> 
	</tr>
	
	<tr>
	    <th align=center>Sunday</th>
	    <th align=center>Monday</th>
	    <th align=center>Tuesday</th>
	    <th align=center>Wednesday</th>
	    <th align=center>Thursday</th>
	    <th align=center>Friday</th>
	    <th align=center>Saturday</th>
	</tr>
	
	<tr>
	   <div tal:repeat = " i range(start_day)" >
	       <td> </td>
	   </div>
	   <div tal:repeat= " day range(1, 8 - start_day)" >
	       <td align=center tal:content= "repeat.day.number">
	   </div>
	</tr>
	<tr tal:repeat= "week range(1, int((no_of_days - 6 + start_day)/4) +1 )">
	     <div tal:repeat="day range(week*7 - start_day, min((week+1) *7-start_day, no_of_days))">
	         <td align=center tal:content="day+1">
	     </div>
	</tr>
        </table>
	
	</div>
	</div>
	</div>
       </div>
</div>

<div metal:use-macro="main.macros['template']">
    <div metal:fill-slot="content">
    
           	<form method="post">
        		Select User: <select name="selecteduser">
							    	<div tal:repeat = "user users">
							    		<span tal:condition="edited_user.username==user">
  											<option value="${user}" selected>${user}</option>
  										</span>
  										<span tal:condition="not edited_user.username==user">
  											<option value="${user}">${user}</option>
  										</span>
  										
  									</div>
							   </select> <br/><br/>
				<input type="submit" name="form.selected" value="Load"/><br/>
				
		    </form>
    
    
    	<span tal:condition="userselected">
    
	        <form method="post">
				Login: <input type="text" name="username" value="${edited_user.username}"/><br/>
				Password: <input type="password" name="password" value="${edited_user.password}"/><br/>
				First Name: <input type="text" name="firstname" value="${edited_user.firstname}"/><br/>
				Middle Name: <input type="text" name="middlename" value="${edited_user.middlename}"/><br/>
				Last Name: <input type="text" name="lastname" value="${edited_user.lastname}"/><br/>
				Birthday:
				<select name="month">
						<div tal:repeat = "month monthlist">
							 <option value=${month[1]}>${month[0]}</option>
		  				</div>
						</select>

						<select name="day">
						<div tal:repeat = "day range(30)">
							<span tal:condition ="(day+1) == edited_user.birthday.day"><option value=${day+1} selected>${day+1}</option> </span>
							<span tal:condition ="not (day+1) == edited_user.birthday.day"><option value=${day+1}>${day+1}</option> </span>
						</div>
						</select>

						<select name="year">
						<div tal:repeat = "year range(120)">
							<span tal:condition ="(year+1900) == edited_user.birthday.year"><option value=${year+1900} selected>${year+1900}</option> </span>
							<span tal:condition ="not (year+1900) == edited_user.birthday.year"><option value=${year+1900} >${year+1900}</option> </span>
		  				</div>
						</select> <br/>
				
				
				Day: <input type="text" name="day" value="${edited_user.birthday.day}"/><br/>
				Month: <input type="text" name="month" value="${edited_user.birthday.month}"/><br/>
				Year: <input type="text" name="year" value="${edited_user.birthday.year}"/><br/>
				Street: <input type="text" name="street" value="${edited_user.street}"/><br/>
				City: <input type="text" name="city" value="${edited_user.city}"/><br/>
				State: <input type="text" name="state" value="${edited_user.state}"/><br/>
				Zipcode: <input type="text" name="zipcode" value="${edited_user.zipcode}"/><br/>
				Residence: <input type="text" name="residence" value="${edited_user.residence}"/><br/>
				Room Number: <input type="text" name="roomnumber" value="${edited_user.roomnumber}"/><br/>
				Phone Number: <input type="text" name="phonenumber" value="${edited_user.phonenumber}"/><br/>
				Email: <input type="text" name="email" value="${edited_user.email}"/><br/>
	
				Privileges: <select name="privileges">
							  	<div tal:repeat = "priv privilegesOptions">
	  						   		<option value=${priv}>${priv}</option>
	  							</div>
							  </select><br/>
							  
				Training Level <select name="trainingvalue">
									<div tal:repeat = "train trainingOptions">
	  						   			<option value=${train}>${train}</option>
	  								</div>
							    </select><br/>
							    
				Administrative Level: <select name="administrativevalue">
									<div tal:repeat = "admin administrativeOptions">
	  						   			<option value=${admin}>${admin}</option>
	  								</div>
							    </select><br/>
							    
				Operational Level: <select name="operationalvalue">
									<div tal:repeat = "oper operationalOptions">
	  						   			<option value=${oper}>${oper}</option>
	  								</div>
							    </select><br/>	    
				
				<input type="hidden" name="userselected" value="${userselected}" />	
	          <input type="submit" name="form.submitted" value="Edit User" />
	        </form>
		</span>
    </div>
</div>
